<?xml version="1.0"?>

    <resources xmlns:tools="http://schemas.android.com/tools">

    <style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme">

    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/colorAccent</item>

</style>

    <style parent="Theme.AppCompat.NoActionBar" name="AppTheme.Base">

    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    <item name="colorAccent">@color/colorAccent</item>

</style>
    <style name="ButtonLogin" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#fff</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">#E6E10B</item>
    </style>

    <style name="ButtonSignUp" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#fff</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">#E6E10B</item>
    </style>
    <style name="ButtonRegister" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorButtonNormal">#E6E10B</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="RegistrationPage">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <color name="selected">#824986</color>

    <color name="unselected">#323238</color>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>
</resources>